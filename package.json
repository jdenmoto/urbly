{
  "name": "urbly-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:local": "npm --prefix functions run build && firebase emulators:start & vite --mode emulator",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "lint:ci": "node scripts/lint-changed.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "npm run deploy:backend && npm run deploy:frontend",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:backend": "npm --prefix functions run build && firebase deploy --only functions,firestore:rules,firestore:indexes",
    "deploy:frontend": "npm run build && firebase deploy --only hosting",
    "functions:logs": "firebase functions:log",
    "firestore:seed": "node scripts/seed-firestore.mjs",
    "firestore:clear:buildings": "node scripts/clear-buildings.mjs",
    "firestore:clear": "node scripts/clear-firestore.mjs",
    "sync:users": "node scripts/sync-users.mjs",
    "firestore:re-init": "npm run firestore:clear && npm run firestore:seed",
    "deploy:preview": "PATH=$PATH:/snap/bin node scripts/deploy-preview.mjs",
    "deploy:preview:branch": "PATH=$PATH:/snap/bin node scripts/deploy-preview.mjs",
    "preview:allow-url": "node scripts/add-preview-referrer.mjs"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^6.1.11",
    "@fullcalendar/interaction": "^6.1.11",
    "@fullcalendar/list": "^6.1.11",
    "@fullcalendar/multimonth": "^6.1.11",
    "@fullcalendar/react": "^6.1.11",
    "@fullcalendar/timegrid": "^6.1.11",
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-table": "^8.20.5",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "firebase": "^12.8.0",
    "firebase-admin": "^12.7.0",
    "festivos-colombianos": "^1.0.6",
    "js-yaml": "^4.1.0",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.15.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.15.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1",
    "vite": "^7.3.1"
  }
}
